<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="false"
      internalLogLevel="Warn" internalLogToConsole="true" internalLogToConsoleError="true">

  <variable name="logDirectory" value="/log/queue/" />

  <targets>

    <!-- stdout -->
    <target xsi:type="ColoredConsole" name="stdout"
            layout="${level:upperCase=true}|${logger} > ${message}"
    />

    <!-- stderr -->
    <target xsi:type="ColoredConsole" name="stderr"
            layout="${level:upperCase=true}|${logger} > ${message}|${exception:format=message,@,data,tostring:maxInnerExceptionLevel=30}"
    />

    <!-- file out -->
    <target xsi:type="File" name="file-out" fileName="${logDirectory}/out-${date:format=dd-MM-yyyy}.log">
      <layout xsi:type="JsonLayout" includeAllProperties="true" excludeProperties="" suppressSpaces="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="lvl" layout="${level:upperCase=true}"/>
        <attribute name="msg" layout="${message}" />
        <attribute name="from" layout="${logger}" />
      </layout>
    </target>

    <!-- file err -->
    <target xsi:type="File" name="file-err" fileName="${logDirectory}/err-${date:format=dd-MM-yyyy}.log">
      <layout xsi:type="JsonLayout" includeAllProperties="true" excludeProperties="" suppressSpaces="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="lvl" layout="${level:upperCase=true}"/>
        <attribute name="msg" layout="${message}" />
        <attribute name="from" layout="${logger}" />
        <attribute name="err" layout="${exception:format=message,@,data,tostring:maxInnerExceptionLevel=30}" />
      </layout>
    </target>

    <!-- file blackhole -->
    <target xsi:type="File" name="blackhole" fileName="${logDirectory}/blackhole-${date:format=dd-MM-yyyy}.log">
      <layout xsi:type="JsonLayout" includeAllProperties="true" excludeProperties="" suppressSpaces="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="lvl" layout="${level:upperCase=true}"/>
        <attribute name="msg" layout="${message}" />
        <attribute name="from" layout="${logger}" />
        <attribute name="err" layout="${exception:format=message,@,data,tostring:maxInnerExceptionLevel=30}" />
      </layout>
    </target>

  </targets>

  <rules>
    <logger name="Microsoft.EntityFrameworkCore.*" maxlevel="Warn" writeTo="blackhole" final="true"/>
    <logger name="Microsoft.EntityFrameworkCore.*" minlevel="Error" writeTo="stderr,file-err" final="true"/>
    <logger name="*" minlevel="Trace" maxlevel="Warn" writeTo="stdout,file-out" />
    <logger name="*" minlevel="Error" writeTo="stderr,file-err" />
  </rules>
</nlog>